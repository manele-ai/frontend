rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow users to read/write only their own avatar file (must be a .webp)
    match /avatars/{fileName} {
      allow read, write: if request.auth != null
                         && fileName == request.auth.uid + '.webp';
    }
    
    // Songs stored under /songs/{uid}/{songId}
    match /songs/{uid}/{songId} {
      // Only apply to .mp3 files
      allow read: if resource != null && (
                    (resource.metadata != null && resource.metadata.visibility != null && resource.metadata.visibility == 'public') ||
                    (request.auth != null && request.auth.uid == uid)
                  );
      // Users may not write
      allow write: if false;
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

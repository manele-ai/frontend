{
  "name": "functions",
  "scripts": {
    "build": "tsc && npm run copy-prompts",
    "build:watch": "tsc --watch & npm run copy-prompts --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "copy-prompts": "cpx \"src/data/prompts/**/*.*\" lib/data/prompts"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.3.2",
    "googleapis": "^144.0.0",
    "lodash": "^4.17.21",
    "openai": "5.16.0",
    "stripe": "^17.4.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.7.3",
    "cpx": "^1.5.0"
  },
  "private": true
}

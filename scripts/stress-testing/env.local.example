# Local Testing Configuration for Firebase Emulator
# Copy this file to .env.local and adjust values as needed

# Firebase Configuration for Local Emulator
FIREBASE_PROJECT_ID=manele-io-test
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@manele-io-test.iam.gserviceaccount.com

# Local Emulator Configuration
USE_EMULATOR=true
EMULATOR_HOST=127.0.0.1
EMULATOR_FUNCTIONS_PORT=5001
EMULATOR_FIRESTORE_PORT=8081
EMULATOR_AUTH_PORT=9099
EMULATOR_STORAGE_PORT=9199

# Local Backend Configuration
LOCAL_BACKEND_URL=http://127.0.0.1:5001
LOCAL_PROJECT_ID=manele-io-test

# Test Configuration
TEST_ACCOUNTS_COUNT=50
TEST_EMAIL_PREFIX=stress.test
TEST_EMAIL_DOMAIN=gmail.com
TEST_PASSWORD=StressTest123!

# Stress Test Configuration
MAX_CONCURRENT_REQUESTS=25
REQUESTS_PER_SECOND=2
TEST_DURATION_SECONDS=300

# Mock Service Configuration
MOCK_OPENAI=true
MOCK_SUNO=true
MOCK_OPENAI_DELAY=2000
MOCK_SUNO_DELAY=5000

# Test Collection Configuration
TEST_COLLECTION=generationRequests
USE_REAL_COLLECTION=true

# Test Folder (will be auto-generated if not set)
STRESS_TEST_FOLDER=local-test
